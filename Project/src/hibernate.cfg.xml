<?xml version="1.0" encoding="UTF-8"?>


<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class"> com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost/final_project</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password"></property>
		<property name="hibernate.connection.pool_size">10</property>
		<property name="show_sql">true</property>
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="hibernate.hbm2ddl.auto">update</property>
		<!-- Mapping files -->
		<mapping resource="VO/Category.hbm.xml" />
		<mapping resource="VO/Subcategory.hbm.xml" />
		<mapping resource="VO/Package.hbm.xml" />
		<mapping resource="VO/PackageFileUpload.hbm.xml"/>
        <mapping resource="VO/State.hbm.xml"/>
        <mapping resource="VO/Country.hbm.xml"/>
        <mapping resource="VO/attachmentMappingVO.hbm.xml"/>
        <mapping resource="VO/attachmentVO.hbm.xml"/>
        <mapping resource="VO/City.hbm.xml"/>
        <mapping resource="VO/DNeck.hbm.xml"/>
        <mapping resource="VO/DSize.hbm.xml"/>
        <mapping resource="VO/DMaterial.hbm.xml"/>
        <mapping resource="VO/DSleeve.hbm.xml"/>
        <mapping resource="VO/DColour.hbm.xml"/>
        <mapping resource="VO/DColorFile.hbm.xml"/>
        <mapping resource="VO/DCloth.hbm.xml"/>
        <mapping resource="VO/DClothFileUpload.hbm.xml"/>
        <mapping resource="VO/DclothColorVO.hbm.xml"/>
        <mapping resource="VO/UaddToCart.hbm.xml"/>
        <mapping resource="VO/UaddToCartMst.hbm.xml"/>
        <mapping resource="VO/Registration.hbm.xml"/>
        <mapping resource="VO/Login.hbm.xml"/>
        <mapping resource="VO/URegistration.hbm.xml"/>
        <mapping resource="VO/UComplaint.hbm.xml"/>
        <mapping resource="VO/UFeedback.hbm.xml"/>
	</session-factory>
</hibernate-configuration>